<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anioncode.wheatheraplication">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.anioncode.wheatheraplication.Login" />


        <activity android:name="com.anioncode.wheatheraplication.Register">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.anioncode.wheatheraplication.HomeActivity" />
        <activity android:name="com.anioncode.wheatheraplication.MainActivity" />
        <activity android:name="com.anioncode.wheatheraplication.EditProfile" />
        <activity android:name="com.anioncode.wheatheraplication.WeatherActivity" />
        <activity android:name="com.anioncode.wheatheraplication.NewsActivity" />
    </application>

</manifest>